= provide :title, 'Log in'

%h1 Log in

.col-lg-6.col-lg-offset-3
  = form_tag login_path do
    .form-group
      = label_tag :email, "Email", class: "form-labels"
      = email_field_tag :email, nil, class: "form-control"
    .form-group
      = label_tag :password, "Password", class: "form-labels"
      = password_field_tag :password, nil, class: "form-control" 
    .form-group
      = check_box_tag :remember_me, 1
      = label_tag :remember_me, "Remember me", class: "form-labels"
      
   
    = submit_tag "Log in", class: "btn btn-lg btn-primary"
