= provide :title, 'Users'

%h1 All Users
%ul.users-list
  - @users.each do |user|
    %li
      = avatar user
      = link_to user.name, user
      |
      = user.email
      - if admin?(current_user)
        |
        = link_to "delete", user, method: :delete, 
          data: { confirm: "Are you sure?" }