= provide :title, @user.name

.container-fluid.logged-in
  .row#show
    = render "shared/header"
    .column-1
      - unless correct_user(@user)
        .user-info#less-info
          = render "shared/user_info"
        .follow
          = render "follow_form"
      - else
        .user-info
          = render "shared/user_info"
    .column-2
      .activity
        .trainings

        .posts
          = render "shared/posts"
    .column-3
      = render "shared/flash_error"
      = render "shared/edit_profile"
