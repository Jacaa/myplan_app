= provide :title, @user.name
%h1 My profile
.row.user-info
  .col-lg-6
    = check_avatar @user
    %ul
      %li= @user.name
      %li= @user.email
      %li= @user.activated_at.strftime("Member since: %d %B %Y")
  .col-lg-4.col-lg-offset-2
    = link_to "Edit my profile", edit_user_path(@user), class: "btn btn-lg btn-primary"