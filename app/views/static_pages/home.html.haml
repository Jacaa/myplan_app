- if logged_in?
  .container-fluid.logged-in
    .row#home-logged
      = render "shared/header"
      .column-1
        .user-info
          = render "shared/user_info"    
      .column-2
        .last-training
          .header
            .add-new
              %a{href: "/", class: "glyphicon glyphicon-plus"}
          .training-table
            %h4{style: "margin-left: 45%"} Last training
            //TABLE
        .training-calender
          %h4{style: "margin-left: 40%"} Training calender
      .column-3
        .post-form
          = render "shared/flash_error"
          = render "shared/micropost_form"
        .posts
          = render "shared/posts"
- else
  .container-fluid.non-logged-in
    .row
      .left-column
        .welcome
          = image_tag "logo.png"
          %h1 Welcome to MyPlan apllication
          %center
            %p Sign up now and share your workout results with the world!
            %h3#signup
              You don't have account?
              = link_to "Sign up now!", signup_path, class: "btn"
      .right-column
        = render "shared/login_form"
  = render "shared/footer"
