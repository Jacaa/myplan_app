%html
  %head
    %title= title(yield :title)
    = render 'layouts/default'
    = render 'layouts/header'
  %body
    .container-fluid
      .jumbotron.center.col-lg-8.col-lg-offset-2
        - flash.each do |flash_type, message|
          .alert{ class: "alert-#{flash_type}" }= message
        = yield
    .container
      = render 'layouts/footer'
      = debug(params) if Rails.env.development?
